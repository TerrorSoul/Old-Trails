{
  "name": "trailmakers-downloader",
  "version": "1.5.1",
  "description": "A tool to download old versions of Trailmakers.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "discord-rpc": "^4.0.1",
    "electron-store": "^8.1.0",
    "keytar": "^7.9.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.1",
    "yauzl": "^2.10.0"
  },
  "build": {
    "appId": "com.terrorsoul.oldtrails",
    "productName": "Old Trails",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist"
    ],
    "asarUnpack": [
      "**/DepotDownloader.exe",
      "**/DepotDownloader",
      "**/steam_api64.dll",
      "**/libsteam_api.so"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "category": "Game"
    },
    "nsis": {
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "uninstallDisplayName": "Old Trails Uninstaller",
      "license": "LICENSE.txt",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
